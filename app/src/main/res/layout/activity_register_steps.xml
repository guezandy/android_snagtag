<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/stock4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="100dp"
        android:src="@drawable/stlogo_s"
        android:id="@+id/logo"/>

    <RelativeLayout
        android:id="@+id/step_bar"
        android:layout_below="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/grey_light">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/first_item"
            android:paddingLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/one"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_above="@+id/about_header"
                android:background="@drawable/circle_blue_button"
                android:text="1"/>
            <TextView
                android:id="@+id/about_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/label_register_1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/second_item"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/two"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_above="@+id/shipping_header"
                android:background="@drawable/circle_grey"
                android:layout_gravity="center"
                android:text="2"/>
            <TextView
                android:id="@+id/shipping_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/label_register_2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:id="@+id/third_item"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/three"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:paddingRight="5dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_above="@+id/billing_header"
                android:background="@drawable/circle_grey"
                android:text="3"/>
            <TextView
                android:id="@+id/billing_header"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="@string/label_register_3"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_light">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999999"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="4dp">
        </LinearLayout>
        <com.snagtag.ui.IconCustomTextView
            android:id="@+id/arrow_back"
            android:text="@string/icon_left"
            android:textSize="28sp"
            android:textColor="@color/grey_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingEnd="24dp"
            />
        <TextView
            android:id="@+id/skip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:background="@drawable/button_shape"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            android:text="@string/skip"/>
    </RelativeLayout>

    <ViewFlipper
        android:id="@+id/register_view_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/step_bar"
        android:layout_above="@id/navigation_bar">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <!-- Step 1,  About you -->
        <RelativeLayout
            android:id="@+id/about_view"
            android:layout_width="match_parent"
            android:background="@color/grey_light"
            android:layout_height="match_parent">
            <!-- Items in the first page go here -->
            <EditText
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Email"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/white"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/emailenvelope"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:layout_below="@id/user_email"
                android:layout_gravity="center_horizontal"
                android:hint="Enter Username"
                android:layout_marginTop="-2dp"
                android:padding="10dp"
                android:drawablePadding="5dp"
                android:textColorHint="@color/white"
                android:drawableLeft="@drawable/user"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/username"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_marginTop="-2dp"
                android:padding="10dp"
                android:drawablePadding="5dp"
                android:textColorHint="@color/white"
                android:drawableLeft="@drawable/passwordlock"/>

            <EditText
                android:id="@+id/confirm_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/password"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:layout_marginTop="-2dp"
                android:padding="10dp"
                android:drawablePadding="5dp"
                android:textColorHint="@color/white"
                android:drawableLeft="@drawable/passwordlock"/>

            <Button
                android:id="@+id/register_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/confirm_pass"
                android:layout_marginTop="20dp"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:text="@string/register_button"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/or"
                android:layout_below="@id/register_button"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/or"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/fbLoginButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/or"
                android:textColor="#fff"
                android:background="@drawable/facebook"
                android:textStyle="bold" />

        </RelativeLayout>
</ScrollView>
        <!-- Step 2, Optional Shipping Address-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center|left"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:background="@color/grey_light"
                    android:text="@string/new_shipping"
                    android:textColor="@color/white"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey_light"
                    android:padding="12dp">
                    <EditText
                        android:id="@+id/shipping_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Full Name"
                        android:layout_marginTop="-2dp"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/user"/>
                    <EditText
                        android:id="@+id/shipping_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="3"
                        android:hint="Street Address"
                        android:inputType="textPostalAddress"
                        android:layout_marginTop="-2dp"
                        android:padding="10dp"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/address"/>
                    <EditText
                        android:id="@+id/shipping_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="City"
                        android:layout_marginTop="-2dp"
                        android:padding="10dp"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/address"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">
                        <Spinner
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:id="@+id/shipping_state"
                            android:layout_below="@+id/comPass"
                            android:background="@drawable/shipping_item_square"
                            android:layout_centerHorizontal="true" />
                        <EditText
                            android:id="@+id/shipping_zipcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Zipcode"
                            android:layout_marginTop="-2dp"
                            android:padding="10dp"
                            android:textColorHint="@color/white"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/address"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/shipping_next_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/blue"
                        android:textColor="@color/white"
                        android:text="Next" />
                </LinearLayout>
               <!--DONE with shipping-->
            </LinearLayout>
        </ScrollView>


        <!-- Step 3, Billing -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/grey_light"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center|start"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="@color/grey_light"
                android:text="@string/new_billing"
                android:textColor="@color/white"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">
                <EditText
                    android:id="@+id/card_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/card_name"
                    android:layout_marginTop="-2dp"
                    android:padding="10dp"
                    android:textColorHint="@color/white"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/user"/>
                <EditText
                    android:id="@+id/card_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/card_number"
                    android:layout_marginTop="-2dp"
                    android:padding="10dp"
                    android:textColorHint="@color/white"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/wallet"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Exp Month: "/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:id="@+id/expiration_month"
                        android:padding="5dp"
                        android:layout_centerHorizontal="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Exp Year: "/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:id="@+id/expiration_year"
                        android:padding="5dp"
                        android:layout_centerHorizontal="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/stripe_verify"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/stripe"
                        android:gravity="center_horizontal"
                        android:textColor="@color/white" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/what_stripe"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ViewFlipper>
</RelativeLayout>